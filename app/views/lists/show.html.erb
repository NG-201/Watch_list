<h1><%= @list.name  %></h1>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-success btn-border-radius 100%" %>
<div class="cards">
  <ul>
    <%@movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="co-12 colsm-6 col-md-4 mb-3" >
          <div class="card-product">
              <img src= <%=movie.poster_url%> />
              <div class="card-product-infos">
                <h2><%= movie.title %></h2>
                <p> <%=bookmark.comment%></p>
                <p><%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}%> </p>
              </div>
          </div>
        </div>
      <%end%>
      <%= link_to "Back to all lists", lists_path %>
  </ul>
</div>
